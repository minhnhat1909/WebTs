  <script>
    //Checked checkbox like radio input
    document.addEventListener('DOMContentLoaded', function() {
      $('input[type="checkbox"]').click(function() {
        var groupCheckBox = $(this).parents('.imageCheckbox').find('input[type="checkbox"]');
        // console.log(groupCheckBox);
        $(groupCheckBox).prop('checked', false);
        $(this).prop('checked', true);
      })
    });
    //tab-pane custom
    $(document).ready(function() {
      $(".item_click").on("click", function() {
        var thisBtn = $(this).attr("href");
        $(this)
          .parents('#title_tab')
          .find('.text-blue-light-homepage')
          .addClass('text-dark')
          .removeClass('text-blue-light-homepage');
        $(this).addClass('text-blue-light-homepage').removeClass('text-dark');
        $(this).parents(".container").find(`${thisBtn}`).removeClass("d-none");
        $(this)
          .parents(".container")
          .find(".imageCheckbox")
          .not(`${thisBtn}`)
          .addClass("d-none");
      });
    })
  </script>
